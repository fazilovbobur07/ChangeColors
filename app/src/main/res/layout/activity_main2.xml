<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <Button
        android:id="@+id/btn_red"
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:backgroundTint="#F10606"
        android:text="Red"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btn_green"
        android:layout_width="101dp"
        android:layout_height="86dp"
        android:backgroundTint="#0CBC06"
        android:text="Green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="27dp" />

    <Button
        android:id="@+id/btn_yellow"
        android:layout_width="101dp"
        android:layout_height="86dp"
        android:backgroundTint="#FFF303"
        android:text="Green"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.948"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="27dp" />

    <Button
        android:id="@+id/btn_havo"
        android:layout_width="101dp"
        android:layout_height="86dp"
        android:backgroundTint="#5DE4CC"
        android:textColor="@color/black"
        android:text="cyan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.029"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="199dp" />

    <Button
        android:id="@+id/btn_siyoh"
        android:layout_width="101dp"
        android:layout_height="86dp"
        android:backgroundTint="#BF5FE0"
        android:textColor="@color/black"
        android:text="SiyohR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.582"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/btn_kul"
        android:layout_width="101dp"
        android:layout_height="86dp"
        android:backgroundTint="#C1BEBE"
        android:textColor="@color/black"
        android:text="Gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.99"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="376dp" />


</LinearLayout>